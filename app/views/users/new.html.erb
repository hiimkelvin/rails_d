  <h1>Registratio</h1>

  <form action="/users/new" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    Email <input type="email" name="user[email]" id="Email">
    Name <input type="text" name="user[name]" id="Name">   
    Password <input type="password" name="user[password]" id="Password">
    Password Confirmation <input type="password" name="user[password_confirmation]" id="Password_Confirmation">           
    <input type="submit" value="Join">
  </form>